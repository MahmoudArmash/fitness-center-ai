@using FitnessCenter.Models
@model IEnumerable<FitnessCenter>

@{
    ViewData["Title"] = "Manage Fitness Centers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Fitness Centers</h2>
    <a asp-action="CreateFitnessCenter" class="btn btn-primary">Create New Fitness Center</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var center in Model)
            {
                <tr>
                    <td>@center.Name</td>
                    <td>@center.Address</td>
                    <td>@center.Phone</td>
                    <td>@center.Email</td>
                    <td>
                        <a asp-action="EditFitnessCenter" asp-route-id="@center.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form id="deleteForm_@center.Id" asp-action="DeleteFitnessCenter" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@center.Id" />
                            <button type="button" class="btn btn-sm btn-danger" 
                                    onclick="showDeleteModal('deleteForm_@center.Id', '@Url.Action("DeleteFitnessCenter", "Admin")', 'Are you sure you want to delete this fitness center?', '@center.Name')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

