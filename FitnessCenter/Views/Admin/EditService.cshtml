@model Service

@{
    ViewData["Title"] = "Edit Service";
}

<h2>Edit Service</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditService" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<ServiceType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DurationMinutes" class="form-label"></label>
                <input asp-for="DurationMinutes" class="form-control" type="number" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FitnessCenterId" class="form-label"></label>
                <select asp-for="FitnessCenterId" class="form-select" asp-items="ViewBag.FitnessCenterId"></select>
                <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Services" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

