@model IEnumerable<Trainer>

@{
    ViewData["Title"] = "Manage Trainers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Trainers</h2>
    <a asp-action="CreateTrainer" class="btn btn-primary">Create New Trainer</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Fitness Center</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trainer in Model)
            {
                <tr>
                    <td>@trainer.FullName</td>
                    <td>@trainer.Email</td>
                    <td>@trainer.Phone</td>
                    <td>@trainer.FitnessCenter.Name</td>
                    <td>
                        <a asp-action="EditTrainer" asp-route-id="@trainer.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form id="deleteForm_@trainer.Id" asp-action="DeleteTrainer" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@trainer.Id" />
                            <button type="button" class="btn btn-sm btn-danger" 
                                    onclick="showDeleteModal('deleteForm_@trainer.Id', '@Url.Action("DeleteTrainer", "Admin")', 'Are you sure you want to delete this trainer?', '@trainer.FullName')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

