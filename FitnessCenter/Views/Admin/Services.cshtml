@model IEnumerable<Service>

@{
    ViewData["Title"] = "Manage Services";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Services</h2>
    <a asp-action="CreateService" class="btn btn-primary">Create New Service</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Duration</th>
                <th>Price</th>
                <th>Fitness Center</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Name</td>
                    <td>@service.Type</td>
                    <td>@service.DurationMinutes minutes</td>
                    <td>$@service.Price.ToString("F2")</td>
                    <td>@service.FitnessCenter.Name</td>
                    <td>
                        <a asp-action="EditService" asp-route-id="@service.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form id="deleteForm_@service.Id" asp-action="DeleteService" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@service.Id" />
                            <button type="button" class="btn btn-sm btn-danger" 
                                    onclick="showDeleteModal('deleteForm_@service.Id', '@Url.Action("DeleteService", "Admin")', 'Are you sure you want to delete this service?', '@service.Name')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

