@model Service

@{
    ViewData["Title"] = "Create Service";
}

<div class="row">
    <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
        <div class="admin-sidebar">
            <h5 class="mb-4 fw-bold">
                <i class="bi bi-shield-check me-2"></i>Admin Panel
            </h5>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-action="FitnessCenters">
                        <i class="bi bi-building"></i>
                        <span>Fitness Centers</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link active" asp-action="Services">
                        <i class="bi bi-list-ul"></i>
                        <span>Services</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-action="Trainers">
                        <i class="bi bi-people"></i>
                        <span>Trainers</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-controller="Appointment" asp-action="Index">
                        <i class="bi bi-calendar-check"></i>
                        <span>Appointments</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-lg-9 col-md-8">
        <div class="py-5">
            <h2 class="mb-4">
                <i class="bi bi-plus-circle me-2"></i>Create New Service
            </h2>

            <div class="card shadow-modern">
                <div class="card-body">
                    <form asp-action="CreateService" method="post" data-validate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        
                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control" required />
                                <label asp-for="Name"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<ServiceType>()" required>
                                    <option value="">-- Select Type --</option>
                                </select>
                                <label asp-for="Type"></label>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control" rows="3" style="height: 100px;"></textarea>
                                <label asp-for="Description"></label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                                    <label asp-for="Price"></label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="DurationMinutes" class="form-control" type="number" required />
                                    <label asp-for="DurationMinutes">Duration (minutes)</label>
                                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <select asp-for="FitnessCenterId" class="form-select" asp-items="ViewBag.FitnessCenterId" required>
                                    <option value="">-- Select Fitness Center --</option>
                                </select>
                                <label asp-for="FitnessCenterId"></label>
                                <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Services" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Create Service
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
