@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h2 class="mb-4">My Appointments</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Date & Time</th>
                    <th>Trainer</th>
                    <th>Service</th>
                    <th>Duration</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.AppointmentDateTime.ToString("g")</td>
                        <td>@appointment.Trainer.FullName</td>
                        <td>@appointment.Service.Name</td>
                        <td>@appointment.DurationMinutes minutes</td>
                        <td>$@appointment.Price.ToString("F2")</td>
                        <td>
                            <span class="badge bg-@(appointment.Status == AppointmentStatus.Confirmed ? "success" : 
                                                      appointment.Status == AppointmentStatus.Pending ? "warning" : 
                                                      appointment.Status == AppointmentStatus.Cancelled ? "danger" : "info")">
                                @appointment.Status
                            </span>
                        </td>
                        <td>
                            <form id="deleteForm_@appointment.Id" asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@appointment.Id" />
                                <button type="button" class="btn btn-sm btn-danger" 
                                        onclick="showDeleteModal('deleteForm_@appointment.Id', '@Url.Action("Delete", "Appointment")', 'Are you sure you want to cancel this appointment?', 'Appointment on @appointment.AppointmentDateTime.ToString("g")')">
                                    Cancel
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>You don't have any appointments yet. <a asp-action="Create">Book your first appointment</a></p>
    </div>
}

