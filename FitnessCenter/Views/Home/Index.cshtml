@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to Fitness Center</h1>
    <p class="lead">Your journey to a healthier lifestyle starts here</p>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <h3 class="card-title text-primary">Personal Training</h3>
                <p class="card-text">One-on-one sessions with certified trainers tailored to your fitness goals.</p>
                <a asp-controller="Service" asp-action="Index" class="btn btn-primary">View Services</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <h3 class="card-title text-success">Group Classes</h3>
                <p class="card-text">Join our yoga and pilates classes for a fun and social workout experience.</p>
                <a asp-controller="Service" asp-action="Index" class="btn btn-success">View Classes</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <h3 class="card-title text-info">AI Recommendations</h3>
                <p class="card-text">Get personalized exercise recommendations based on AI-powered photo analysis.</p>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Member"))
                {
                    <a asp-controller="AI" asp-action="Index" class="btn btn-info">Try AI Analysis</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-info">Get Started</a>
                }
            </div>
        </div>
    </div>
</div>

@if (User.Identity?.IsAuthenticated == false)
{
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h4 class="card-title">Ready to Start?</h4>
                    <p class="card-text">Create an account to book appointments and access all features.</p>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2">Register</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Login</a>
                </div>
            </div>
        </div>
    </div>
}
