@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-modern">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <i class="bi bi-person-plus me-2"></i>Create Account
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post" data-validate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="FirstName" class="form-control" required />
                                <label asp-for="FirstName"></label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="LastName" class="form-control" required />
                                <label asp-for="LastName"></label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" type="email" required />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Password" class="form-control" type="password" required />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Register
                        </button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <p>Already have an account? <a asp-action="Login">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

