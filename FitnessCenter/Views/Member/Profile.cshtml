@model Member

@{
    ViewData["Title"] = "My Profile";
}

<div class="py-5">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-modern mb-4">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-circle me-2"></i>Profile Information
                    </h3>
            </div>
            <div class="card-body">
                    <form asp-action="UpdateProfile" method="post" data-validate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" required />
                                    <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                        </div>
                        <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" required />
                                    <label asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                        </div>
                    </div>

                    <div class="mb-3">
                            <div class="form-floating">
                        <input asp-for="Email" class="form-control" readonly />
                                <label asp-for="Email"></label>
                            </div>
                    </div>

                    <div class="mb-3">
                            <div class="form-floating">
                        <input asp-for="Address" class="form-control" />
                                <label asp-for="Address"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                                <div class="form-floating">
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <label asp-for="DateOfBirth"></label>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                        </div>
                        <div class="col-md-4 mb-3">
                                <div class="form-floating">
                            <select asp-for="Gender" class="form-select">
                                <option value="">-- Select --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                                    <label asp-for="Gender"></label>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                        </div>
                    </div>

                    <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                            <input asp-for="Height" class="form-control" type="number" step="0.1" />
                                    <label asp-for="Height">Height (cm)</label>
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                            <input asp-for="Weight" class="form-control" type="number" step="0.1" />
                                    <label asp-for="Weight">Weight (kg)</label>
                            <span asp-validation-for="Weight" class="text-danger"></span>
                                </div>
                        </div>
                    </div>

                    <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Update Profile
                            </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
        <div class="col-lg-4">
            <div class="card shadow-modern mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-image me-2"></i>Photo
                    </h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                {
                        <img src="@Model.PhotoPath" alt="Profile Photo" class="img-fluid rounded mb-3" style="max-height: 200px; border-radius: var(--border-radius);" />
                }
                else
                {
                        <div class="mb-3" style="height: 200px; display: flex; align-items: center; justify-content: center; background: var(--bg-secondary); border-radius: var(--border-radius);">
                            <i class="bi bi-person-circle" style="font-size: 5rem; color: var(--text-muted);"></i>
                        </div>
                    <p class="text-muted">No photo uploaded</p>
                }
                <form asp-action="UploadPhoto" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <input type="file" name="photo" class="form-control" accept="image/*" required />
                    </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-upload me-2"></i>Upload Photo
                        </button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.RecentAppointments != null)
{
        <div class="card shadow-modern mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar-check me-2"></i>Recent Appointments
                </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                    <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Trainer</th>
                            <th>Service</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in (List<Appointment>)ViewBag.RecentAppointments)
                        {
                            <tr>
                                <td>@appointment.AppointmentDateTime.ToString("g")</td>
                                <td>@appointment.Trainer.FullName</td>
                                <td>@appointment.Service.Name</td>
                                <td>
                                    <span class="badge bg-@(appointment.Status == AppointmentStatus.Confirmed ? "success" : "warning")">
                                        @appointment.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
