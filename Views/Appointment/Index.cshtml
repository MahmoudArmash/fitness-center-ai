@model IEnumerable<Appointment>
@using Microsoft.AspNetCore.Identity
@using FitnessCenter.Models
@inject UserManager<Member> UserManager

@{
    ViewData["Title"] = "Appointments";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = currentUser != null && await UserManager.IsInRoleAsync(currentUser, "Admin");
    ViewBag.IsAdmin = isAdmin;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-calendar-check me-2"></i>@(isAdmin ? "All Appointments" : "My Appointments")
    </h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>@(isAdmin ? "Create Appointment" : "Book New Appointment")
    </a>
</div>

@if (Model.Any())
{
    <!-- Filters -->
    <div class="card shadow-modern mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <div class="form-floating">
                        <select name="statusFilter" class="form-select" id="statusFilter">
                            <option value="">All Statuses</option>
                            <option value="Pending" selected="@(ViewBag.StatusFilter == "Pending")">Pending</option>
                            <option value="Confirmed" selected="@(ViewBag.StatusFilter == "Confirmed")">Confirmed</option>
                            <option value="Completed" selected="@(ViewBag.StatusFilter == "Completed")">Completed</option>
                            <option value="Cancelled" selected="@(ViewBag.StatusFilter == "Cancelled")">Cancelled</option>
                        </select>
                        <label for="statusFilter">Status</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <select name="dateFilter" class="form-select" id="dateFilter">
                            <option value="">All Dates</option>
                            <option value="today" selected="@(ViewBag.DateFilter == "today")">Today</option>
                            <option value="week" selected="@(ViewBag.DateFilter == "week")">This Week</option>
                            <option value="month" selected="@(ViewBag.DateFilter == "month")">This Month</option>
                            <option value="upcoming" selected="@(ViewBag.DateFilter == "upcoming")">Upcoming</option>
                            <option value="past" selected="@(ViewBag.DateFilter == "past")">Past</option>
                        </select>
                        <label for="dateFilter">Date Filter</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input type="text" name="searchTerm" class="form-control" id="searchTerm" 
                               value="@ViewBag.SearchTerm" placeholder="Search by trainer, service..." />
                        <label for="searchTerm"><i class="bi bi-search me-2"></i>Search</label>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100" style="height: 58px;">
                        <i class="bi bi-funnel me-1"></i>Filter
                    </button>
                </div>
            </form>
            @if (!string.IsNullOrWhiteSpace(ViewBag.SearchTerm as string) || !string.IsNullOrWhiteSpace(ViewBag.StatusFilter as string) || !string.IsNullOrWhiteSpace(ViewBag.DateFilter as string))
            {
                <div class="mt-3">
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Appointments List (Calendar Style) -->
    <div class="row g-3">
                @foreach (var appointment in Model)
                {
            <div class="col-md-6 col-lg-4">
                <div class="appointment-card">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="appointment-date">
                                @appointment.AppointmentDateTime.ToString("MMM dd, yyyy")
                            </div>
                            <div class="appointment-time">
                                @appointment.AppointmentDateTime.ToString("hh:mm tt")
                            </div>
                        </div>
                            <span class="badge bg-@(appointment.Status == AppointmentStatus.Confirmed ? "success" : 
                                                      appointment.Status == AppointmentStatus.Pending ? "warning" : 
                                                      appointment.Status == AppointmentStatus.Cancelled ? "danger" : "info")">
                                @appointment.Status
                            </span>
                    </div>
                    
                    <div class="appointment-trainer">
                        <i class="bi bi-person-badge me-2"></i>@appointment.Trainer.FullName
                    </div>
                    <div class="appointment-service mb-3">
                        <i class="bi bi-list-ul me-2"></i>@appointment.Service.Name
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            <i class="bi bi-clock me-1"></i>@appointment.DurationMinutes min
                        </small>
                        <strong class="text-primary">
                            $@appointment.Price.ToString("F2")
                        </strong>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(appointment.Notes))
                    {
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="bi bi-chat-left-text me-1"></i>@appointment.Notes
                            </small>
                        </div>
                    }
                    
                    <div class="d-flex gap-2">
                        @{
                            var appointmentUser = await UserManager.GetUserAsync(User);
                            var appointmentIsAdmin = appointmentUser != null && await UserManager.IsInRoleAsync(appointmentUser, "Admin");
                            var isOwner = appointment.MemberId == appointmentUser?.Id;
                            var canCancel = (appointmentIsAdmin || isOwner) && appointment.Status != AppointmentStatus.Completed && appointment.Status != AppointmentStatus.Cancelled;
                            var canApprove = appointmentIsAdmin && appointment.Status == AppointmentStatus.Pending;
                            var canComplete = appointmentIsAdmin && appointment.Status == AppointmentStatus.Confirmed;
                        }
                        
                        @if (canCancel)
                        {
                            <form asp-action="Delete" method="post" class="flex-fill">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@appointment.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100" 
                                        onclick="return confirm('Are you sure you want to cancel this appointment?');">
                                    <i class="bi bi-x-circle me-1"></i>Cancel
                                </button>
                            </form>
                        }
                        
                        @if (canApprove)
                        {
                            <form asp-action="Approve" method="post" class="flex-fill">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@appointment.Id" />
                                <button type="submit" class="btn btn-sm btn-success w-100">
                                    <i class="bi bi-check-circle me-1"></i>Approve
                                </button>
                            </form>
                        }
                        
                        @if (canComplete)
                        {
                            <form asp-action="Complete" method="post" class="flex-fill">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@appointment.Id" />
                                <button type="submit" class="btn btn-sm btn-info w-100">
                                    <i class="bi bi-check2-all me-1"></i>Complete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
                }
    </div>
}
else
{
    <div class="card shadow-modern">
        <div class="card-body text-center py-5">
            <i class="bi bi-calendar-x" style="font-size: 4rem; color: var(--text-muted);"></i>
            <h3 class="mt-3 mb-2">No Appointments Yet</h3>
            <p class="text-muted mb-4">You don't have any appointments scheduled. Book your first appointment to get started!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Book Your First Appointment
            </a>
        </div>
    </div>
}
