@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-modern">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post" data-validate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" type="email" required />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" type="password" required />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-4 form-check form-switch">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <p>Don't have an account? <a asp-action="Register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

