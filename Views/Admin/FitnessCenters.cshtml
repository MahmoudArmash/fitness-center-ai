@using FitnessCenter.Models
@model IEnumerable<FitnessCenter>

@{
    ViewData["Title"] = "Manage Fitness Centers";
}

<div class="row">
    <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
        <div class="admin-sidebar">
            <h5 class="mb-4 fw-bold">
                <i class="bi bi-shield-check me-2"></i>Admin Panel
            </h5>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link active" asp-action="FitnessCenters">
                        <i class="bi bi-building"></i>
                        <span>Fitness Centers</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-action="Services">
                        <i class="bi bi-list-ul"></i>
                        <span>Services</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-action="Trainers">
                        <i class="bi bi-people"></i>
                        <span>Trainers</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-controller="Appointment" asp-action="Index">
                        <i class="bi bi-calendar-check"></i>
                        <span>Appointments</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-lg-9 col-md-8">
        <div class="py-5">
<div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-building me-2"></i>Fitness Centers
                </h2>
                <a asp-action="CreateFitnessCenter" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Create New Fitness Center
                </a>
</div>

            <div class="card shadow-modern">
                <div class="card-body">
<div class="table-responsive">
                        <table class="table">
                            <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var center in Model)
            {
                <tr>
                                        <td>
                                            <i class="bi bi-building me-2 text-primary"></i>
                                            <strong>@center.Name</strong>
                                        </td>
                    <td>@center.Address</td>
                    <td>@center.Phone</td>
                    <td>@center.Email</td>
                    <td>
                                            <div class="d-flex gap-2">
                                                <a asp-action="EditFitnessCenter" asp-route-id="@center.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil me-1"></i>Edit
                                                </a>
                        <form id="deleteForm_@center.Id" asp-action="DeleteFitnessCenter" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@center.Id" />
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                    onclick="showDeleteModal('deleteForm_@center.Id', '@Url.Action("DeleteFitnessCenter", "Admin")', 'Are you sure you want to delete this fitness center?', '@center.Name')">
                                                        <i class="bi bi-trash me-1"></i>Delete
                            </button>
                        </form>
                                            </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
                </div>
            </div>
        </div>
    </div>
</div>
